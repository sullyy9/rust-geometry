            "label": "Build Release Linux"
        },
        {
            "type": "shell",
            "command": "cargo",
            "args": ["run", "--release"],
            "problemMatcher": ["$rustc"],
            "group": "build",
            "label": "Run"
        },
        {
            "type": "shell",
            "command": "cargo",
            "args": ["test"],
            "problemMatcher": ["$rustc"],
            "group": "build",
            "label": "Test"
        }
    ]
